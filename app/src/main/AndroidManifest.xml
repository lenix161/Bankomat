<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.bankomatsimulator" >

    <application
        android:name=".activities.App"
        android:allowBackup="false"
        android:fullBackupContent="false"
        android:icon="@drawable/ic_baseline_attach_money_24"
        android:label="@string/app_name"
        android:roundIcon="@drawable/ic_baseline_attach_money_24"
        android:supportsRtl="true"
        android:theme="@style/Theme.BankomatSimulator"
        tools:targetApi="31"
        android:dataExtractionRules="@xml/data_extraction_rules">

        <activity
            android:name=".activities.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.BankomatSimulator.NoActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
        android:name=".activities.CurrencyActivity"
        android:exported="true"/>

        <activity
            android:name=".activities.MenuActivity"
            android:exported="true" />

        <activity
            android:name=".activities.AddMoneyActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.recycleView.RecycleActivity"
            android:exported="true"/>

        <activity
            android:name=".activities.GetMoneyActivity"
            android:exported="true"/>


    </application>

</manifest>